{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": false,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "typeRoots": ["./node_modules/@types"],
    "lib": [
      "es2019",
      "dom"
    ],
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.*",
    "node_modules",
    "../web-app"
  ]
}
