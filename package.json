{
  "name": "akademiasaas",
  "private": true,
  "scripts": {
    "emulator": "firebase emulators:start --import ./emulator-data --export-on-exit ./emulator-data",
    "release": "lerna version --yes",
    "bootstrap": "pnpm install",
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=16384 turbo run dev --concurrency 20",
    "check-deps": "pnpm manypkg check",
    "check-deps-fix": "pnpm manypkg fix",
    "precommit": "pnpm check-deps  && lerna run --concurrency 1 --stream precommit &&  pnpm check-types && pnpm test",
    "prepare": "node scripts/prepare.js",
    "preinstall": "npx only-allow pnpm",
    "approve-builds": "node scripts/approve-builds.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "check-types": "turbo check-types --continue --cache-dir=.turbo"
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "upper-case"
        ]
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@manypkg/cli": "^0.21.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "cross-env": "^7.0.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "firebase-functions": "5.1.0",
    "firebase-tools": "^13.25.0",
    "husky": "^8.0.3",
    "inquirer-directory": "^2.2.0",
    "lerna": "^7.4.2",
    "prettier": "^3.3.2",
    "turbo": "^2.4.4",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": "22"
  },
  "resolutions": {
    "api": "^5.0.6"
  },
  "packageManager": "pnpm@10.4.1"
}
