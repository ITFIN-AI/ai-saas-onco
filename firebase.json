{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "runtime": "nodejs22",
    "source": "apps/functions/lib",
    "ignore": [
      "node_modules",
      ".runtimeconfig.json",
      ".packages"
    ],
    "predeploy": [
      "cd apps/functions && pnpm build"
    ]
  },
  "hosting": {
    "public": "apps/web-app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "database.rules.json"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "cd apps/web-app && pnpm build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5004
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  }
}
