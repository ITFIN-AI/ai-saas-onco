{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "runtime": "nodejs22",
    "source": "apps/functions/lib",
    "ignore": [
      "node_modules",
      ".runtimeconfig.json",
      ".packages"
    ],
    "predeploy": [
      "cd apps/functions && pnpm build"
    ]
  },
  "hosting": {
    "public": "apps/web-app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "database.rules.json"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "cd apps/web-app && pnpm build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "0.0.0.0"
    },
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 5004,
      "host": "0.0.0.0"
    },
    "pubsub": {
      "port": 8085,
      "host": "0.0.0.0"
    },
    "storage": {
      "port": 9199,
      "host": "0.0.0.0"
    },
    "database": {
      "port": 9000,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4000
    },
    "hub": {
      "host": "0.0.0.0",
      "port": 4400
    }
  }
}
